<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Welcome to Schooly"
        android:textColor="#1A237E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your school, all in one place"
        android:textSize="16sp"
        android:textColor="#5C6BC0"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== ROW 1 ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProfile"
        style="@style/DashboardCard"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardSchedule"
        app:layout_constraintHorizontal_chainStyle="spread">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSchedule"
        style="@style/DashboardCard"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/cardProfile"
        app:layout_constraintBottom_toBottomOf="@id/cardProfile"
        app:layout_constraintStart_toEndOf="@id/cardProfile"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Schedule"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== ROW 2 ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGrades"
        style="@style/DashboardCard"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardAttendance"
        app:layout_constraintHorizontal_chainStyle="spread">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Grades"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAttendance"
        style="@style/DashboardCard"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/cardGrades"
        app:layout_constraintBottom_toBottomOf="@id/cardGrades"
        app:layout_constraintStart_toEndOf="@id/cardGrades"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Attendance"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== ROW 3 ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHomework"
        style="@style/DashboardCard"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardGrades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardMessages"
        app:layout_constraintHorizontal_chainStyle="spread">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Homework"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMessages"
        style="@style/DashboardCard"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/cardHomework"
        app:layout_constraintBottom_toBottomOf="@id/cardHomework"
        app:layout_constraintStart_toEndOf="@id/cardHomework"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Messages"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
